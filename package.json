{
  "name": "starter",
  "version": "1.0.0",
  "description": "A starter express node js application",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node -r dotenv/config build/src/index.js",
    "format": "eslint --fix && prettier --write",
    "prepare": "husky install"
  },
  "author": "Enoch Klufio",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.9",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "cls-rtracer": "^2.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.0",
    "hpp": "^0.2.3",
    "morgan": "^1.10.0",
    "zod": "^3.19.1"
  },
  "husky": {
    "hooks": {
      "applypatch-msg": "echo \"[Husky] applypatch-msg\"",
      "pre-applypatch": "echo \"[Husky] pre-applypatch\"",
      "post-applypatch": "echo \"[Husky] post-applypatch\"",
      "pre-commit": "echo \"[Husky] pre-commit\" && git add -A"
    }
  },
  "lint-staged": {
    "*": "pretter --write"
  }
}
