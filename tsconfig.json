{
  "compilerOptions": {
    "target": "ES6",
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "lib": ["ESNext"],
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "rootDir": ".",
    "baseUrl": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
